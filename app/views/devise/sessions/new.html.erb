<div class="max-w-md mx-auto mt-20 p-6 bg-white rounded-xl shadow-inner">
  <h2 class="text-2xl font-bold text-center mb-6">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>

    <div>
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@example.com",
            class: "mt-1 w-full px-4 py-2 rounded-xl bg-white shadow-inner focus:shadow-md focus:outline-none transition" %>
    </div>

    <div>
      <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••",
            class: "mt-1 w-full px-4 py-2 rounded-xl bg-white shadow-inner focus:shadow-md focus:outline-none transition" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, "ログイン状態を保持する", class: "text-sm text-gray-700" %>
      </div>
    <% end %>

    <div>
      <%= f.submit "ログイン", class: "w-full px-4 py-2 text-blue-600 bg-white rounded-xl shadow-inner hover:shadow font-semibold transition" %>
    </div>

  <% end %>

  <div class="mt-6">
    <%= render "devise/shared/links" %>
  </div>
</div>
