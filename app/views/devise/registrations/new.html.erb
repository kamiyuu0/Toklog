<div class="max-w-md mx-auto mt-20 p-6 bg-white rounded-xl shadow-inner">
  <h2 class="text-2xl font-bold text-center mb-6">アカウント作成</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>

    <% if resource.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-md text-sm">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>
    <% end %>

    <div>
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@example.com",
            class: "mt-1 w-full px-4 py-2 rounded-xl bg-white shadow-inner focus:shadow-md focus:outline-none transition" %>
    </div>

    <div>
      <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mb-1">（<%= @minimum_password_length %>文字以上）</p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••",
            class: "mt-1 w-full px-4 py-2 rounded-xl bg-white shadow-inner focus:shadow-md focus:outline-none transition" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "パスワード（確認用）", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••",
            class: "mt-1 w-full px-4 py-2 rounded-xl bg-white shadow-inner focus:shadow-md focus:outline-none transition" %>
    </div>

    <div>
      <%= f.submit "アカウント作成", class: "w-full px-4 py-2 text-blue-600 bg-white rounded-xl shadow-inner hover:shadow font-semibold transition" %>
    </div>

  <% end %>

  <div class="mt-6">
    <%= render "devise/shared/links" %>
  </div>
</div>
