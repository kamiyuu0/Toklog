<!-- app/views/users/registrations/edit.html.erb -->
<h2 class="text-2xl font-bold mb-4">プロフィール編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
  <% if resource.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h3><%= pluralize(resource.errors.count, "エラー") %>があります：</h3>
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "ユーザー名", class: "block font-medium" %>
    <%= f.text_field :name, class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" %>
  </div>

  <!-- パスワード入力は省略する場合下記2行は削除またはコメントアウト可 -->
  <div>
    <%= f.label :current_password, "現在のパスワード（必須）", class: "block font-medium" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" %>
  </div>

  <div>
    <%= f.submit "更新する", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition" %>
  </div>
<% end %>
