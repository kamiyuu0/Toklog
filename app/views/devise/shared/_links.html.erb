<div class="space-y-3 text-sm text-center text-gray-600">

  <% if devise_mapping.recoverable? && !%w[passwords registrations].include?(controller_name) %>
    <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name),
        class: "inline-block text-blue-600 hover:text-blue-700 transition" %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "確認メールが届いていませんか？", new_confirmation_path(resource_name),
        class: "inline-block text-blue-600 hover:text-blue-700 transition" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "アカウントのロック解除メールを再送する", new_unlock_path(resource_name),
        class: "inline-block text-blue-600 hover:text-blue-700 transition" %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <div class="pt-5 border-t">
      <% resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン",
            omniauth_authorize_path(resource_name, provider),
            method: :post,
            class: "w-full mt-3 px-4 py-2 bg-green-500 text-white rounded-xl hover:bg-green-600 transition font-semibold",
            data: { turbo: false } %>
      <% end %>
    </div>
  <% end %>

</div>
