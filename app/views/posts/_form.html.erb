<%= form_with(model: post, class: "space-y-6") do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-600 px-4 py-3 rounded-md text-sm shadow-inner">
      <h2 class="font-semibold mb-2"><%= pluralize(post.errors.count, "件のエラー") %>があります:</h2>
      <ul class="list-disc ml-5">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "タイトル", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title,
          class: [
            "w-full px-4 py-2 rounded-xl bg-white shadow-inner focus:shadow-md transition",
            post.errors[:title].any? ? "text-red-600 ring-1 ring-red-300" : "text-gray-800"
          ] %>
  </div>

  <div>
    <%= form.label :recorded_on, "記録日", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.datetime_field :recorded_on,
          class: [
            "w-full px-4 py-2 rounded-xl bg-white shadow-inner focus:shadow-md transition",
            post.errors[:recorded_on].any? ? "text-red-600 ring-1 ring-red-300" : "text-gray-800"
          ] %>
  </div>

  <div>
    <%= form.submit "積む",
        class: "w-full sm:w-auto px-5 py-2 text-blue-600 bg-blue-50 rounded-xl shadow-inner hover:shadow font-semibold transition" %>
  </div>
<% end %>
