<% content_for :title, "詳細画面" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-600 font-medium rounded-md inline-block shadow-inner" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="font-bold text-4xl mb-6">詳細画面</h1>

  <%= render @post %>

  <div class="mt-6 flex flex-col sm:flex-row gap-2">
    <% if current_user.own?(@post) %>
      <%= link_to "編集", edit_post_path(@post),
          class: "w-full sm:w-auto text-center px-4 py-2 text-gray-700 bg-gray-50 rounded-xl shadow-inner hover:shadow font-medium transition" %>

      <%= button_to "削除", @post, method: :delete,
          form_class: "sm:inline-block",
          class: "w-full sm:w-auto text-center px-4 py-2 text-red-600 bg-gray-50 rounded-xl shadow-inner hover:shadow font-medium transition",
          data: { turbo_confirm: "本当に削除しますか？" } %>
    <% end %>

    <%= link_to "投稿一覧に戻る", posts_path,
        class: "w-full sm:w-auto text-center px-4 py-2 text-gray-700 bg-gray-50 rounded-xl shadow-inner hover:shadow font-medium transition" %>
  </div>
</div>
