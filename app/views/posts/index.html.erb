<% content_for :title, "一覧画面" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 text-green-600 font-medium rounded-md inline-block mb-5 shadow-inner">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">一覧画面</h1>
    <%= link_to "徳を積む", new_post_path,
        class: "px-4 py-2 text-blue-600 bg-white rounded-xl shadow-inner hover:shadow font-medium transition" %>
  </div>

  <div id="posts" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render post %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row gap-2 mt-4 sm:mt-0 sm:ml-4">
            <%= link_to "詳細", post,
                class: "w-full sm:w-auto text-center px-4 py-2 text-gray-700 bg-white rounded-xl shadow-inner hover:shadow transition font-medium" %>

            <% if current_user.own?(post) %>
              <%= link_to "編集", edit_post_path(post),
                  class: "w-full sm:w-auto text-center px-4 py-2 text-gray-700 bg-white rounded-xl shadow-inner hover:shadow transition font-medium" %>

              <%= button_to "削除", post, method: :delete,
                  class: "w-full sm:w-auto text-center px-4 py-2 text-red-600 bg-white rounded-xl shadow-inner hover:shadow transition font-medium",
                  data: { turbo_confirm: "本当に削除しますか？" } %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10 text-gray-500">投稿が見つかりませんでした。</p>
    <% end %>
  </div>
</div>
